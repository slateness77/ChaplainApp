<h1>New User</h1>

<form class="form-inline" role="form">

	<%= form_for @user do |f| %>
	<div class="form-group">
	  Name: <%= f.text_field :name, :class => "form-control" %>
	</div>
	<br>
	<br>
	<div class="form-group">
	  Email: <%= f.text_field :email, :class => "form-control" %>
	</div>
	<br>
	<br>
	<div class="form-group">
	  Password: <%= f.password_field :password, :class => "form-control" %>
	</div>
	<br>
	<br>
	<div class="form-group">
	  Phone: <%= f.text_field :phone, :class => "form-control" %>
	</div>
	<br>
	<br>
	<div class="form-group">
	  Station: <%= f.text_field :station, :class => "form-control" %>
	</div>
	<br>
	<br>
	<div class="form-group">
	  BirthYear: <%= f.text_field :birth_year, :class => "form-control" %>
	</div>
	<br>
	<br>
	<div class="form-group">
	  Language: <%= f.text_field :language, :class => "form-control" %>
	</div>
	<br>
	<br>
	  <div class="form-group">
	  Denomination: <%= f.text_field :denomination, :class => "form-control" %>
	</div>
</form>


  

  <%= f.submit "Confirm", :class => "btn btn-success" %>



<% end %>